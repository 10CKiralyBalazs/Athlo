        <Border Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
        VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        
        <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="100"
        Width="2" Background="Gray"
        HorizontalAlignment="Right"/>
        <Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="100"
 Width="2" Background="Gray"
 HorizontalAlignment="Right"/>
        <Border Grid.Row="1" Grid.Column="3" Grid.RowSpan="100"
 Width="2" Background="Gray"
 HorizontalAlignment="Right"/>
        <Border Grid.Row="1" Grid.Column="4" Grid.RowSpan="100"
 Width="2" Background="Gray"
 HorizontalAlignment="Right"/>

