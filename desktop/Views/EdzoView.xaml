<UserControl x:Class="MyApp.Desktop.Views.EdzoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyApp.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:Background="Silver">
    
    
    <Grid>
		<Grid.RowDefinitions>
			
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="12"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
		</Grid.ColumnDefinitions>
        <Rectangle  HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.ColumnSpan="6" Grid.Row="1" Grid.Column="0" Fill="Gray" Height="1"/>
        <TextBlock TextAlignment="Center" Grid.Row ="1" Grid.Column="1">Edzők neve:</TextBlock>
        <TextBlock TextAlignment="Center" Grid.Row ="1" Grid.Column="2">Életkor:</TextBlock>
        <TextBlock TextAlignment="Center" Grid.Row ="1" Grid.Column="3">Egyesület:</TextBlock>
        <TextBlock TextAlignment="Center" Grid.Row ="1" Grid.Column="4">Sportolói:</TextBlock>

        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
                VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
        VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
        VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
        VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
        VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
        VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
        VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Border Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
        VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Border Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
        VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Border Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
        VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Border Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
        VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Border Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="4" Width="412" Background="Gray" Height="2"
